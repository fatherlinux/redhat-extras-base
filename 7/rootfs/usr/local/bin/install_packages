#!/bin/sh
set -e
set -u
n=0
max=2
until [ $n -gt $max ]; do
    set +e
    yum install -y "$@" || yum install --disablerepo=rhel-7-server-htb-rpms -y "$@"
    CODE=$?
    set -e
    if [ $CODE -eq 0 ]; then
        break
    fi
    if [ $n -eq $max ]; then
        exit $CODE
    fi
    echo "yum failed, retrying"
    n=$(($n + 1))
done
rm -r /var/cache/yum
